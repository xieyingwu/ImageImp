<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ggtf.xieyingwu.cloudphoto.MainActivity"
    >

    <Button
        android:id="@+id/auth_instagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="ToAuthInstagram"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/auth_dropbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="ToAuthDropBox"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/set_header_take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="SetHeaderTake"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/set_header_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="SetHeaderPick"
        android:textAllCaps="false"
        />

    <ImageView
        android:id="@+id/imgSrc"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
