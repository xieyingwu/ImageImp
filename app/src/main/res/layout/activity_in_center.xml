<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/show_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="btnClick"
        android:text="Show/Hide"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/to_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/show_hide"
        android:onClick="btnClick"
        android:text="To First"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/calculate_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/to_first"
        android:onClick="btnClick"
        android:text="Calculate Distance"
        android:textAllCaps="false"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_show_in_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        />

</RelativeLayout>